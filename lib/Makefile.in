include ../def.mk

INSTALL_FILES=msg_remap_all_Oper.py \
              msg_ctype.py \
              msg_ctth.py \
              msg_rgb_remap_all_Oper.py \
              msg_remap_util.py \
	      smhi_safnwc_legends.py \
	      msg_ctype2radar.py \
	      misc_utils.py \
	      coverage.py \
	      image_processing.py \
	      time_utils.py \
	      image.py \
	      geo_image.py \
	      satellite.py \
	      meteosat09.py \
	      palettes.py

DEST_LIB_DIR = $(MSGPP_INSTALL_PATH)/lib/python2.5/site-packages
DEST_BIN_DIR = $(MSGPP_INSTALL_PATH)/bin

BIN_INSTALL_FILES = tm_msg_postproc.ksh msg_n2inject.ksh

all: ;

clean:
	@\rm -f core *.pyc *~

distclean:
	@\rm -f core *.pyc *~
	@\rm -f Makefile
	@\rm -f tm_msg_postproc.ksh msg_remap_all_Oper.ksh msg_n2inject.ksh msg_remap_all.ksh

install:
	@for i in $(INSTALL_FILES) ; \
	do \
		$(HLHDF_INSTALL_BIN) -f -o -m644 -C $$i $(DEST_LIB_DIR)/$$i; \
	done
	@for i in $(BIN_INSTALL_FILES) ; \
	do \
		$(HLHDF_INSTALL_BIN) -f -o -m755 -C $$i $(DEST_BIN_DIR)/$$i; \
	done
